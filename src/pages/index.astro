<script is:inline>
	let currentSlide = 0;

function openModal() {
  document.getElementById('carouselModal').classList.remove('hidden');
  showSlide(currentSlide);
}

function closeModal() {
  document.getElementById('carouselModal').classList.add('hidden');
}

function showSlide(index) {
  const slides = document.querySelectorAll('.carousel-item');
  slides.forEach((slide, i) => {
    slide.classList.add('hidden');
    slide.classList.remove('active');
  });
  slides[index].classList.remove('hidden');
  slides[index].classList.add('active');
}

function nextSlide() {
  const slides = document.querySelectorAll('.carousel-item');
  currentSlide = (currentSlide + 1) % slides.length;
  showSlide(currentSlide);
}

function prevSlide() {
  const slides = document.querySelectorAll('.carousel-item');
  currentSlide = (currentSlide - 1 + slides.length) % slides.length;
  showSlide(currentSlide);
}

</script>
<style is:global>
	button.collision {
	 text-decoration: none;
	 color: #60A5FA;
	 font-family: 'Poppins', sans-serif;
	 font-weight: bold;
	 display: block;
	 height: 50px;
	 width: 150px;
	 overflow: hidden;
	 line-height: 50px;
	 text-align: center;
	 position: relative;
	 border: 1px solid #60A5FA;
   }
 
   button.collision::before,
   button.collision::after {
	 position: absolute;
	 content: '';
	 width: 20px;
	 height: 20px;
	 background:#60A5FA;
	 top: 50%;
	 border-radius: 50%;
	 z-index: -1;
   }
 
   button.collision::before {
	 transform: translate(-50%, -50%);
	 left: -20px;
   }
 
   button.collision::after {
	 transform: translate(50%, -50%);
	 right: -20px;
   }
 
   button.collision:hover::before {
	 animation: move-left .8s both;
	 animation-direction: alternate;
   }
   button.collision:hover::after {
	 animation: move-right .8s both;
	 animation-direction: alternate;
   }
 
   button.collision:hover{
	 animation: button-color .8s both;
   }
 
   @keyframes button-color {
	 0% {
	   color: #60A5FA;
	 }
	 100% {
	   color: #60A5FA;
	 }
   }
 
   @keyframes move-left {
	 0% {
	   left: -20px;
	 }
	 50% {
	   left: 50%;
	   width: 20px;
	   height: 20px;
	 }
	 100% {
	   left: 50%;
	   height: 400px;
	   width: 400px;
	 }
   }
 
   @keyframes move-right {
	 0% {
	   right: -20px;
	 }
	 50% {
	   right: 50%;
	   width: 20px;
	   height: 20px;
	 }
	 100% {
	   right: 50%;
	   height: 400px;
	   width: 400px;
	 }
   }
 
   .button{
	 position: relative;
	 display: block;
	 width: 250px;
	 height: 45px;
	 line-height: 40px;
	 color: #60A5FA;
	 font-size: 16px;
	 font-weight: 500;
	 text-align: center;
	 overflow: hidden;
	 border-radius: 50px;
	 border: 2px solid #60A5FA;
	 transition: all 2s ease;
 
	 &:hover{
	   color: #fff;
	   position: relative;
	   z-index: 1;
 
	   &::before{
		 left: 0%;
		 right: auto;
		 width: 100%;
		 z-index: -1;
	   }
 
	   &::after{
 
	   }
	 }
 
	 &::before{
	   position: absolute;
	   top: 0px;
	   right: 0px;
	   height: 100%;
	   width: 0px;
	   content: '';
	   background: #60A5FA;
	   transition: all 0.4s cubic-bezier(0.42, 0, 0.58, 1);
	 }
 
	 &::after{
	   content: "";
	   position: absolute;
	   height: 0%;
	   left: 50%;
	   top: 50%;
	   width: 150%;
	   transition: all 0.75s ease 0s;
	 }
   }
 </style>
 